<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ProfileFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        tools:text="Username"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        tools:text="Email"/>

    <TextView
        android:id="@+id/txt_faceProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        tools:text="Facebook profile"/>

    <TextView
        android:id="@+id/txt_cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        tools:text="Cellphone"/>

    <TextView
        android:id="@+id/txt_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Cerrar sesiÃ³n"/>

    <TextView
        android:id="@+id/txt_deleteAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Cerrar cuenta"/>

</LinearLayout>